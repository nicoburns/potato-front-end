{{#each potatoes}}
	<li class="media">
		<a href="#!/potato/{{id}}" style="background-image: URL({{media}})" class="c-potato-list__image media__img" />
	    <div class="media__body">
	   		<h2 class="c-potato-list__heading"><a href="#!/potato/{{id}}">{{title}}</a></h2>
	        <p class="c-potato-list__metadata">
	        	<span class="c-potato-list__metadata__date" >Published: {{#with date_taken}}{{day}}{{daySuffix}} {{month}} {{year}} at {{hours}}:{{minutes}}{{/with}}</span>
	        	<a class="c-potato-list__metadata__author" href="https://www.flickr.com/photos/{{author_id}}">{{author}}</a>
	        	<a class="c-potato-list__metadata__link" href="{{link}}">View on Flickr</a>
	    	</p>
	    </div>
    </li>
{{/each}}